.catalog-page-items
  .container
    ul.catalog-page-items__list
      each item in data
        li.catalog-page-items__item.catalog-page-item
          picture.catalog-page-item__picture
            source(srcset= item.mobileSrcset media="(max-width: 767px)")
            source(srcset= item.tabletScrset media="(max-width: 1149px)")
            img(src= item.src srcset= item.desktopSrcset alt= item.name)
          .catalog-page-item__content
            p.catalog-page-item__name= item.name
            p.catalog-page-item__description= item.description
            p.catalog-page-item__price
              span= item.price
              a(href="#").catalog-page-item__cart-link
                svg(width="21" height="19")
                  use(xlink:href="#icon-cart")
    
  
  
